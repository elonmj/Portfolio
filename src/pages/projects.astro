        <div class="flex flex-wrap justify-center gap-3">
          {technologies.map((tech) => (
            <span class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-full text-gray-700 dark:text-gray-300 font-medium hover:border-blue-500 dark:hover:border-blue-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-pointer">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-purple-600 to-blue-600">
      <div class="container py-16">
        <div class="max-w-3xl mx-auto text-center text-white">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Un projet en t√™te ?
          </h2>
          <p class="text-xl mb-8 opacity-90">
            Discutons de votre projet et voyons comment je peux vous aider √† le r√©aliser.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="mailto:votre.email@example.com" 
              class="btn bg-white text-purple-600 hover:bg-gray-100"
            >
              D√©marrer un projet
            </a>
            <a 
              href="/blog" 
              class="btn border-2 border-white text-white hover:bg-white hover:text-purple-600"
            >
              Lire mes articles
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
